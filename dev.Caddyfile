localhost {
    route /video/ping {
        uri strip_prefix /video
        reverse_proxy video-streamer:1323
    }

    reverse_proxy /video video-streamer:1323
    reverse_proxy /video/* video-streamer:1323

    route /storage/ping {
        uri strip_prefix /storage
        reverse_proxy storage-service:1323
    }

    ## Uncomment below line to expose the storage service outside docker-compose
    reverse_proxy /storage/* storage-service:1323
}